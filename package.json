{
  "name": "nest-keycloak-bearer",
  "version": "0.5.0",
  "private": false,
  "description": "Protect your resources (API or GraphQL) with Keycloak JWT tokens.",
  "keywords": [
    "nestjs",
    "keycloak",
    "tenant",
    "tenancy"
  ],
  "author": {
    "name": "Alberto Menendez Romero",
    "url": "https://github.com/albertomr86"
  },
  "license": "MIT",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/albertomr86/nest-keycloak-bearer"
  },
  "scripts": {
    "start:dev": "tsc -w",
    "clean": "rimraf dist",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint ./src --ext .ts",
    "build:copy": "cpr README.md dist/README.md && cpr LICENSE dist/LICENSE && cpr package.json dist/package.json"
  },
  "dependencies": {
    "jwk-to-pem": "^2.0.5"
  },
  "peerDependencies": {
    "@nestjs/common": "^6.0.0 || ^7.0.0 || ^8.0.0",
    "@nestjs/core": "^6.0.0 || ^7.0.0 || ^8.0.0"
  },
  "optionalDependencies": {
    "@nestjs/graphql": "^6.0.0 || ^7.0.0 || ^8.0.0"
  },
  "peerDependenciesMeta": {
    "@nestjs/graphql": {
      "optional": true
    }
  },
  "devDependencies": {
    "@nestjs/common": "^8.0.6",
    "@nestjs/core": "^8.0.6",
    "@nestjs/graphql": "^8.0.2",
    "@nestjs/platform-express": "^8.0.6",
    "@nestjs/testing": "^8.0.9",
    "@types/express": "^4.17.13",
    "@types/jwk-to-pem": "^2.0.1",
    "@types/node": "^16.10.2",
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "@typescript-eslint/parser": "^4.32.0",
    "apollo-server-express": "^2.25.2",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "cpr": "^3.0.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "graphql": "^15.5.2",
    "jest": "^27.2.4",
    "prettier": "^2.4.1",
    "reflect-metadata": "^0.1.13",
    "release-it": "^14.11.6",
    "rimraf": "^3.0.2",
    "rxjs": "^7.3.0",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3"
  }
}